source ~/.vim/startup/functions/directories.vim
source ~/.vim/startup/functions/formatting.vim

" Load settings files
source ~/.vim/startup/settings.vim
source ~/.vim/startup/plugins.vim
source ~/.vim/startup/mappings.vim

